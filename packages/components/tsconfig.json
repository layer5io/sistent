{
    "extends": "tsconfig/react-library.json",
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "base": ["src/base/*"],
        "custom": ["src/custom/*"]
      },
      "declarationMap": true,
      "emitDeclarationOnly": true,
      "typeRoots": ["./src/types"],
      "types": ["react-error-boundary"],
      "lib": ["es2020", "DOM"],
      "target": "es2020",
      "module": "esnext"
    },
    "include": ["."],
    "exclude": ["dist", "build", "node_modules", "**/*.d.ts", "tsup.config.ts"]
  }
  